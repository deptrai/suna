# ChainLens Core - Environment Configuration
NODE_ENV=development
PORT=3006
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration (PostgreSQL on Docker)
DATABASE_URL=postgresql://chainlens:chainlens_dev_password@localhost:5433/chainlens_microservices
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=chainlens
DB_PASSWORD=chainlens_dev_password
DB_DATABASE=chainlens_microservices
DB_SCHEMA=public

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication (Supabase) - Optional for development
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# HTTP Client
HTTP_TIMEOUT=30000

# Microservices URLs
ONCHAIN_SERVICE_URL=http://localhost:3001
SENTIMENT_SERVICE_URL=http://localhost:3002
TOKENOMICS_SERVICE_URL=http://localhost:3003
TEAM_SERVICE_URL=http://localhost:3004

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_PATH=/api/v1/metrics

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=10000

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_ANALYSIS=600
CACHE_TTL_ONCHAIN=180
CACHE_TTL_SENTIMENT=120

# Development Only
SWAGGER_ENABLED=true
DEBUG_MODE=true
DETAILED_LOGGING=true

