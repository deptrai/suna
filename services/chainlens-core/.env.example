# ChainLens Core - Environment Configuration
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
PORT=3006
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/chainlens_core
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=chainlens_core
DB_SCHEMA=public

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# HTTP Client
HTTP_TIMEOUT=30000

# External Services Configuration
MORALIS_API_KEY=your-moralis-api-key
DEFI_LLAMA_API_URL=https://api.llama.fi
DEX_SCREENER_API_URL=https://api.dexscreener.com
COINGECKO_API_KEY=your-coingecko-api-key

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=ChainLens/1.0

# GitHub API
GITHUB_TOKEN=your-github-token

# Microservices URLs
ONCHAIN_SERVICE_URL=http://localhost:3001
SENTIMENT_SERVICE_URL=http://localhost:3002
TOKENOMICS_SERVICE_URL=http://localhost:3003
TEAM_SERVICE_URL=http://localhost:3004

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_PATH=/api/v1/metrics

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=10000

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_ANALYSIS=600
CACHE_TTL_ONCHAIN=180
CACHE_TTL_SENTIMENT=120

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000

# Development Only
SWAGGER_ENABLED=true
DEBUG_MODE=true
DETAILED_LOGGING=true
