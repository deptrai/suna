# =====================================================
# ChainLens Core - Development Environment Variables
# =====================================================

# Application Configuration
NODE_ENV=development
PORT=3006
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/chainlens_core
POSTGRES_DB=chainlens_core
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=chainlens:dev:

# Supabase Configuration (Development/Mock)
SUPABASE_URL=https://mock-project.supabase.co
SUPABASE_ANON_KEY=mock-anon-key-for-development
SUPABASE_SERVICE_ROLE_KEY=mock-service-role-key-for-development
SUPABASE_JWT_SECRET=development-jwt-secret

# JWT Configuration
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting (Relaxed for development)
THROTTLE_TTL=60
THROTTLE_LIMIT=10000

# HTTP Client
HTTP_TIMEOUT=30000

# External Services (Mock/Test endpoints)
MORALIS_API_KEY=mock-moralis-api-key
DEFI_LLAMA_API_URL=https://api.llama.fi
DEX_SCREENER_API_URL=https://api.dexscreener.com
COINGECKO_API_KEY=mock-coingecko-api-key

# Social Media APIs (Mock for development)
TWITTER_BEARER_TOKEN=mock-twitter-bearer-token
REDDIT_CLIENT_ID=mock-reddit-client-id
REDDIT_CLIENT_SECRET=mock-reddit-client-secret
REDDIT_USER_AGENT=ChainLens-Dev/1.0
GITHUB_TOKEN=mock-github-token

# Microservices URLs (Development)
ONCHAIN_SERVICE_URL=http://localhost:3001
SENTIMENT_SERVICE_URL=http://localhost:3002
TOKENOMICS_SERVICE_URL=http://localhost:3003
TEAM_SERVICE_URL=http://localhost:3004

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_PATH=/api/v1/metrics
GRAFANA_PASSWORD=admin

# Security (Relaxed for development)
HELMET_ENABLED=true
COMPRESSION_ENABLED=false
SWAGGER_ENABLED=true
DEBUG_MODE=true
DETAILED_LOGGING=true

# Circuit Breaker Configuration (Relaxed)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30000
CIRCUIT_BREAKER_MONITORING_PERIOD=5000

# Cache Configuration (Shorter TTL for development)
CACHE_TTL_DEFAULT=60
CACHE_TTL_ANALYSIS=120
CACHE_TTL_ONCHAIN=30
CACHE_TTL_SENTIMENT=30

# Queue Configuration
QUEUE_CONCURRENCY=3
QUEUE_MAX_ATTEMPTS=2
QUEUE_BACKOFF_DELAY=1000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=15000

# Rate Limiting (Development values)
RATE_LIMIT_WINDOW_SIZE=3600
RATE_LIMIT_MAX_REQUESTS_FREE=100
RATE_LIMIT_MAX_REQUESTS_PRO=10000
RATE_LIMIT_MAX_REQUESTS_ENTERPRISE=100000

# Development Tools
HOT_RELOAD=true
WATCH_MODE=true
SOURCE_MAPS=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/chainlens_core_test
TEST_REDIS_DB=1

# Mock External Services
MOCK_EXTERNAL_APIS=true
MOCK_DELAY_MS=100
