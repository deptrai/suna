# Sentiment Analysis Service - Environment Configuration
NODE_ENV=development
PORT=3002
LOG_LEVEL=debug

# Database Configuration (PostgreSQL on Docker)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=chainlens
DB_PASSWORD=chainlens_dev_password
DB_NAME=chainlens_microservices
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# External APIs
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=ChainLens-Sentiment/1.0
NEWS_API_KEY=your-news-api-key

# Service Configuration
CACHE_TTL=300
MAX_BATCH_SIZE=100
SENTIMENT_CONFIDENCE_THRESHOLD=0.5

