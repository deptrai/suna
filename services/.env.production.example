# =====================================================
# ChainLens Core - Production Environment Variables
# =====================================================

# Application Configuration
NODE_ENV=production
PORT=3006
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database
POSTGRES_DB=chainlens_core
POSTGRES_USER=chainlens_user
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=chainlens:

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-domain.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# HTTP Client
HTTP_TIMEOUT=30000

# External Services
MORALIS_API_KEY=your-moralis-api-key
DEFI_LLAMA_API_URL=https://api.llama.fi
DEX_SCREENER_API_URL=https://api.dexscreener.com
COINGECKO_API_KEY=your-coingecko-api-key

# Social Media APIs
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=ChainLens/1.0
GITHUB_TOKEN=your-github-token

# Microservices URLs
ONCHAIN_SERVICE_URL=http://onchain-service:3001
SENTIMENT_SERVICE_URL=http://sentiment-service:3002
TOKENOMICS_SERVICE_URL=http://tokenomics-service:3003
TEAM_SERVICE_URL=http://team-service:3004

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_PATH=/api/v1/metrics
GRAFANA_PASSWORD=your-secure-grafana-password

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
SWAGGER_ENABLED=false
DEBUG_MODE=false
DETAILED_LOGGING=false

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=10000

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_ANALYSIS=600
CACHE_TTL_ONCHAIN=180
CACHE_TTL_SENTIMENT=120

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@chainlens.com

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# New Relic APM (optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=ChainLens-Core-Production

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket

# Kubernetes Configuration
K8S_NAMESPACE=chainlens-production
K8S_SERVICE_ACCOUNT=chainlens-core

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting Redis Keys TTL
RATE_LIMIT_WINDOW_SIZE=3600
RATE_LIMIT_MAX_REQUESTS_FREE=10
RATE_LIMIT_MAX_REQUESTS_PRO=1000
RATE_LIMIT_MAX_REQUESTS_ENTERPRISE=10000
