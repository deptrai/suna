# Force isolated node_modules to prevent global cache conflicts
node-linker=isolated

# Disable shameful hoisting to ensure proper module resolution
shamefully-hoist=false

# Prefer offline packages to avoid global cache issues
prefer-offline=true

# Disable symlinks to force local resolution
symlinks=false

# Use strict peer dependencies
strict-peer-dependencies=true

# Disable shared workspace lockfile for isolation
shared-workspace-lockfile=false
