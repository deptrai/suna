{
  "info": {
    "name": "ChainLens API Collection",
    "description": "Collection for testing ChainLens backend API with v98store integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "chainlens_base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "supabase_url",
      "value": "http://localhost:54321",
      "type": "string"
    },
    {
      "key": "supabase_anon_key",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNx_N7rq4HTzKzpggnWNReilDMblYTn_I0",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Get Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "    console.log('Access token saved:', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "apikey",
                "value": "{{supabase_anon_key}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{supabase_url}}/auth/v1/token?grant_type=password",
              "host": ["{{supabase_url}}"],
              "path": ["auth", "v1", "token"],
              "query": [
                {
                  "key": "grant_type",
                  "value": "password"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Models",
      "item": [
        {
          "name": "Get Available Models",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{chainlens_base_url}}/api/billing/available-models",
              "host": ["{{chainlens_base_url}}"],
              "path": ["api", "billing", "available-models"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Agent",
      "item": [
        {
          "name": "Test OpenAI GPT-4o-mini",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "prompt",
                  "value": "Hello! Test OpenAI GPT-4o-mini model",
                  "type": "text"
                },
                {
                  "key": "model_name",
                  "value": "openai/gpt-4o-mini",
                  "type": "text"
                },
                {
                  "key": "stream",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{chainlens_base_url}}/api/agent/initiate",
              "host": ["{{chainlens_base_url}}"],
              "path": ["api", "agent", "initiate"]
            }
          },
          "response": []
        },
        {
          "name": "Test v98store GPT-4o-mini",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "prompt",
                  "value": "Hello! Test v98store OpenAI-compatible GPT-4o-mini model",
                  "type": "text"
                },
                {
                  "key": "model_name",
                  "value": "openai-compatible/gpt-4o-mini",
                  "type": "text"
                },
                {
                  "key": "stream",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{chainlens_base_url}}/api/agent/initiate",
              "host": ["{{chainlens_base_url}}"],
              "path": ["api", "agent", "initiate"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
